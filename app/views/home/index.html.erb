<div class="container">
  <h1 class="text-2xl font-bold text-center mb-5 mt-3">New Products</h1>
  <div class="product-listing">
    <% if @products.present? %>
      <div class="row">
        <% @products.each do |product| %>
          <div class="col-sm-3 mb-3">
            <a href="">
              <img src="<%= product['image'] %>" alt="<%= product['name'] %>" class="img-fluid" loading="lazy">
            </a>
            <h2 class="name mt-2"><a href=""><%= product['name'] %></a></h2>
            <div class="price">Price: <span class="number"><%= number_to_currency(product['price'], unit: '$') %></span></div>
            <div class="stock-quantity">Stock quantity: <%= product['stock_quantity'] %></div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center text-gray-500">No products available.</div>
    <% end %>
  </div>
</div>
